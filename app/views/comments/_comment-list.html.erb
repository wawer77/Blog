<h2>Comments</h2>
<% @article.comments.each do |comment| %>
<div class="<%= 'bground_gray' if !@com_in.even? %>">
      <p>
        <%= comment.created_at %><br>
        <strong>User email: </strong>
        <%= comment.user.email %>
      </p>
      <p>
        <strong>Comment:</strong>
        <%= comment.body %>
      </p>
      <% if (user_signed_in? && comment.user == current_user) || (user_signed_in? && current_user.admin?) %>
      <p>
        <%= link_to 'Delete', [comment.article, comment], method: :delete %>
        <%= link_to 'Edit', edit_article_comment_path(comment.article, comment) %>
      </p>
      <% end %>
    </div>

  <% @com_in += 1 %>
<% end %>
